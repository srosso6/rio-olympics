<h2>Nation</h2>

  <span class="sprite-flags sprite-flags-large sprite-flags-large-<%= @nation.code %>"></span>
  <%= @nation.title %> - <%= @nation.code %>
  <a href="/nations/<%= @nation.id %>/edit"><img src="/img/edit.png" class="icon" alt="Edit"></a>
  <a href="/nations/<%= @nation.id %>/edit"><img src="/img/delete.png" class="icon" alt="Delete"></a><br><br>

  <a href="/athletes/new/<%= @nation.id %>"><button type="button" class="btn">Add an Athlete</button></a><br><br>

  <% @nation.athletes.each do |athlete| %>
  <a href="/athletes/<%= athlete.id %>"><%= athlete.full_name %></a>
  <a href="/athletes/<%= athlete.id %>/edit"><img src="/img/edit.png" class="icon" alt="Edit"></a>
  <a href="/athletes/<%= athlete.id %>/delete"><img src="/img/delete.png" class="icon" alt="Delete"></a><br>
  <% end %><br><br>

<a href="/nations"><button type="button" class="btn">All Nations</button></a>