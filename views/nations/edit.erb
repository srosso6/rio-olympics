<h2>Edit Nation</h2>

<form action="/nations/<%= @nation.id %>" method="post">
<input type="hidden" name="_method" value="put">

    <div class="form-group">
      <label for="title">Title:</label>
      <input type="text" name="title" value="<%= @nation.title %>"><br>
    </div>

    <div class="form-group">
      <label for="code">Code:</label>
      <input type="text" name="code" value="<%= @nation.code %>"><br>
    </div>

    <button type="submit" class="btn edit-btn">Edit</button>

    <br>
    <br>

    <a href="/nations"><button type="button" class="btn">Go Back</button></a>
    
</form>