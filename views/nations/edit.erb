<h1>Edit Nation</h1>

<form action="/nations/<%= @nation.id %>" method="post">
<input type="hidden" name="_method" value="put">

    <label for="title">Title:</label>
    <input type="text" name="title" value="<%= @nation.title %>"><br>

    <label for="code">Code:</label>
    <input type="text" name="code" value="<%= @nation.code %>"><br>

    <button type="submit" name="edit nation">Edit</button>
</form>